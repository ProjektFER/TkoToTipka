<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tko to tipka? | @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")   

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    @*<script src="~/Scripts/measurement.js"></script>*@
    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }
</head>
<body>
    <div class="wrapper">
        <div class="container-full">
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Tko to tipka?", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Početna", "Index", "Home")</li>
                            <li>@Html.ActionLink("Nauči", "Learn", "Home")</li>
                            <li>@Html.ActionLink("Prepoznaj", "Recognize", "Home")</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="container body-content">

                <div class="contentBox">
                    @RenderBody()
                </div>

            </div>
            <div class="push"></div>
        </div>
    </div>
        <div class="footer">
            <hr />
            <p>&copy; @DateTime.Now.Year - Tko to tipka?</p>
        </div>
    



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>